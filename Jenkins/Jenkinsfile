pipeline {
  agent any
    stages {
        stage('SCM Checkout'){
          steps {
            echo 'Welcome to the SCM Checkout'
            git 'https://github.com/F3rnand3s/jenkins-test'
          }
        }

        stage('Build: APPs Dockerfile') {
          steps {
            echo 'Welcome to the Build APP Stage!'
            sh 'pwd'
            sh 'docker build -t app:jenkins ./app'
            sh 'docker rmi app:jenkins'
          }
        }

        stage('Build: docker-compose (Nginx + App)') {
          steps {
            echo 'Welcome to the Build Nginx Stage!'
            sh 'pwd'
            sh 'docker-compose up -d'
            sh 'docker-compose down'
          }
        }

        stage('Output') {
          steps {
            echo 'Welcome to the Output Stage!'
          }
        }

        stage('Cleanup') {
          steps {
            echo 'Welcome to the Cleanup Stage!'
            sh 'ls -la'
            sh 'rm -rf *'
            sh 'ls -la'
          }
        }
    }
}

