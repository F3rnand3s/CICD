pipeline {
  agent any
    stages {
        stage('Setup') {
          steps {
            echo 'Welcome to the Setup Stage!'
            sh 'ls -la'
          }
        }

        stage('Build APP') {
          steps {
            echo 'Welcome to the Build APP Stage!'
            sh 'pwd'
            sh 'docker build -t app:jenkins ./app'
            sh 'docker rmi app:jenkins'
          }
        }

        stage('Build Nginx+APP') {
          steps {
            echo 'Welcome to the Build Nginx Stage!'
            sh 'pwd'
            sh 'docker-compose up'
            sh 'docker-compose down'
          }
        }

        stage('Output') {
          steps {
            echo 'Welcome to the Output Stage!'
          }
        }

        stage('Cleanup') {
          steps {
            echo 'Welcome to the Cleanup Stage!'
            sh 'ls -la'
            sh 'rm -rf *'
            sh 'ls -la'
          }
        }
    }
}

