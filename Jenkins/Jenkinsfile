node {
  def app
  def nginx

  stage('Clone Repo') {
    checkout scm
  }

  stage('Build app') {
    app = docker.build('app:jenkins', 'app/')
  }

  stage('Test app') {
    app.inside {
      echo "Tests passed"
    }
  }

// NGINX STUFF HERE
  stage('Build nginx image') {
    app = docker.build('nginx:jenkins', 'nginx/')
  }

  stage('Clean up') {
    sh 'rm -rf *'
  }
}