pipeline {
    agent { docker { image 'docker:latest' } }
    stages {
        stage('Setup') {
          steps {
            echo 'Welcome to the Setup Stage!'
            sh 'sudo docker ps -a'
          }
        }

        stage('Build') {
          steps {
            echo 'Welcome to the Build Stage!'
          }
        }

        stage('Output') {
          steps {
            echo 'Welcome to the Output Stage!'
          }
        }
    }
}

