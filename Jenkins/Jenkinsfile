pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
              agent {
                docker { label 'my_node_label' image 'node:7-alpine' }
              }
            }
        }
        stage('Test') { 
            steps {
            echo 'Hello World!'
            }
        }
        stage('Deploy') { 
            steps {
            echo 'Hello World!'
            }
        }
    }
}