node {
  def app
  def nginx

  stage('Clone Repo') {
    checkout scm
  }

  stage('Build app') {
    app = docker.build('app:jenkins', 'app/')
  }

  stage('Test app') {
    app.inside {
      echo "Tests passed"
    }
  }

  stage('Push image') {
    docker.withRegistry('https://hub.docker.com/repository/docker/f3rnand3s/app', 'docker-creds') {
      app.push("${env.BUILD_NUMBER}")
      app.push("latest")
    }
    echo "Pushing Docker image to DockerHub"
  }

  stage('Clean up') {
    sh 'rm -rf *'
  }
}